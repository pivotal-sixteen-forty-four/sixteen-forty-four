#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
include FileUtils

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../', __FILE__)

def say(statement, io=$stdout)
  io.puts "\n== #{statement} =="
end

def abort!(statement)
  say(statement, $stderr)
  abort
end

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  EXPECTED_RUBY_VERSION = File.read('.ruby-version').chomp
  if RUBY_VERSION != EXPECTED_RUBY_VERSION
    abort!("You must be using Ruby-#{EXPECTED_RUBY_VERSION}")
  end

  # This script is a starting point to setup your application.
  # Add necessary setup steps to this file.

  puts '== Installing dependencies =='
  system! 'brew install postgresql'

  if !system('pgrep -lf postgresql >/dev/null 2>&1')
    say('Follow instructions above in another window to start postgresql')
    say('Then press enter')
    gets
  end

  system! 'gem install bundler --conservative'
  system('bundle check') or system!('bundle install')

  puts "\n== Preparing database =="
  system! 'bin/rails db:setup'

  puts "\n== Removing old logs and tempfiles =="
  system! 'bin/rails log:clear tmp:clear'

  puts "\n== Restarting application server =="
  system! 'bin/rails restart'
end
