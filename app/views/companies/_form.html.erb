<%= nested_form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h4>

      <ul>
        <% @company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :floor, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :floor, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :suite, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :suite, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :instructions, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :instructions, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :phone, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :website, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :website, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <%= f.fields_for :org_units %>
    <p><%= f.link_to_add "Add Org Unit", :org_units %></p>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
